{
    "compilerOptions": {
        "types": ["node"],
        "lib": [
          "es2015",
          "dom"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*":[
                "nodes_modules/*"
            ]
        },
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules"
        // "**/*.spec.ts"
    ],
    "typeRoots": [
        "../node_modules/@types/index.d.ts"
    ]
}
